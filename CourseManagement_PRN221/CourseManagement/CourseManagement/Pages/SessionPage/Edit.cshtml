@page
@model CourseManagement.Pages.SessionPage.EditModel

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Session.Id" />
            <div class="form-group">
                <label asp-for="Session.SessionDate" class="control-label"></label>
                    <select asp-for="Session.SessionDate" class="form-control">
                    <option value="Slot 1 - Slot 2">Slot 1 - Slot 2</option>
                    <option value="Slot 3 - Slot 4 ">Slot 3 - Slot 4</option>
                    <option value="Slot 5 - Slot 6  ">Slot 5 - Slot 6</option>

                </select>
                <span asp-validation-for="Session.SessionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.SlotStart" class="control-label"></label>
                         <select asp-for="Session.SlotStart" class="form-control">
                    <option value="07:00:00">07:00:00</option>
                    <option value="10:30:00">10:30:00</option>
                    <option value="14:15:00">14:15:00</option>
                </select>
                <span asp-validation-for="Session.SlotStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.SlotEnd" class="control-label"></label>
                    <select asp-for="Session.SlotEnd" class="form-control">
                    <option value="10:15:00">10:15:00</option>
                    <option value="14:00:00">14:00:00</option>
                    <option value="17:15:00">17:15:00</option>
                </select>
                <span asp-validation-for="Session.SlotEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.CourseId" class="control-label"></label>
                <select asp-for="Session.CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="Session.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.RoomId" class="control-label"></label>
                <select asp-for="Session.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Session.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./SessionPage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
