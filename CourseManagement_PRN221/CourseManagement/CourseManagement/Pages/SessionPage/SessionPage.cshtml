@page
@model CourseManagement.Pages.SessionPage.IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>Session List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .create-link {
            margin-bottom: 20px;
        }

        .actions {
            white-space: nowrap;
        }


        .header {
            background-color: #1E90FF;
            padding: 10px;
            color: white;
            text-align: center;
        }

        .content-container {
            margin-left: 220px;
        }

        .create-link {
            margin-bottom: 20px;
            margin-top: 20px;
        }

            .create-link p {
                margin: 0;
            }

            .create-link a {
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
                border-radius: 4px;
            }

                .create-link a:hover {
                    background-color: #0056b3;
                }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100vh;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .navbar-nav {
            list-style-type: none;
            padding: 0;
        }

        .nav-item {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>Session Page</h1>
    </div>

    <div>
        <nav class="navbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="../CoursePage/CourseMainPage">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../SemesterPage/SemesterPage">Semester</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../SessionPage/SessionPage">Session</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../RoomPage/RoomPage">Room</a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="content-container">
        <div class="create-link">
            <p>
                <a asp-page="Create">Create New</a>
            </p>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Session Date</th>
                    <th>Slot Start</th>
                    <th>Slot End</th>
                    <th>Course</th>
                    <th>Room</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Session)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SessionDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SlotStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SlotEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.CourseCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Room.RoomCode)
                        </td>
                        <td class="actions">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

  
</body>
</html>
