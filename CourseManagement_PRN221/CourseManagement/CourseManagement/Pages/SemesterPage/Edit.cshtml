@page
@model CourseManagement.Pages.SemesterPage.EditModel

<h4>Semester</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Semester.Id" />
            <div class="form-group">
                <label asp-for="Semester.SemesterName" class="control-label"></label>
                <input asp-for="Semester.SemesterName" class="form-control" required data-val="true" data-val-required="Vui lòng nhập tên học kỳ." />
                <span asp-validation-for="Semester.SemesterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.DateCreate" class="control-label"></label>
                <input asp-for="Semester.DateCreate" class="form-control" required data-val="true" data-val-required="Vui lòng nhập date." />
                <span asp-validation-for="Semester.DateCreate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.Status" class="control-label"></label>
                <select asp-for="Semester.Status" class="form-control">
                    <option value="1">Open</option>
                    <option value="0">Closed</option>
                </select>
                <span asp-validation-for="Semester.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester.SemesterCode" class="control-label"></label>
                <input asp-for="Semester.SemesterCode" class="form-control" required data-val="true" data-val-required="Vui lòng nhập mã học kỳ." />
                <span asp-validation-for="Semester.SemesterCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./SemesterPage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
