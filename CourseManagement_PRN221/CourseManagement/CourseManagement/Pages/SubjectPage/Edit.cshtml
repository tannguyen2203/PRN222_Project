@page
@model CourseManagement.Pages.SubjectPage.EditModel

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subject.Id" />
            <div class="form-group">
                <label asp-for="Subject.SubjectName" class="control-label"></label>
                <input asp-for="Subject.SubjectName" class="form-control" required data-val="true" data-val-required="Vui lòng nhập SubjectName." onblur="convertToUpperCase(this)" />
                <span asp-validation-for="Subject.SubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.SubjectCode" class="control-label"></label>
                <input asp-for="Subject.SubjectCode" class="form-control" required data-val="true" data-val-required="Vui lòng nhập SubjectCode." onblur="convertToUpperCase(this)"/>
                <span asp-validation-for="Subject.SubjectCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.CreateDate" class="control-label"></label>
                <input asp-for="Subject.CreateDate" class="form-control" required data-val="true" data-val-required="Vui lòng nhập date." />
                <span asp-validation-for="Subject.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.MajorId" class="control-label"></label>
                <select asp-for="Subject.MajorId" class="form-control" asp-items="ViewBag.MajorId"></select>
                <span asp-validation-for="Subject.MajorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./SubjectPage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
