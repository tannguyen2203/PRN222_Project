@page
@model CourseManagement.Pages.Student.IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>Student List</title>
    <style>
        body {
            padding: 20px;
            background-color: #FFFFFF;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .header {
            background-color: #1E90FF;
            padding: 10px;
            color: white;
            text-align: center;
            width: 100%;
        }

        .container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100vh;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .navbar-nav {
            list-style-type: none;
            padding: 0;
        }

        .nav-item {
            margin-bottom: 10px;
        }

        .content {
            flex-grow: 1;
            margin-left: 20px;
        }

        .table-container {
            margin-top: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #1E90FF;
            color: white;
        }

        img {
            width: 100px;
            height: 100px;
        }

        .btn {
            display: inline-block;
            padding: 5px 10px;
            background-color: #1E90FF;
            color: white;
            text-decoration: none;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #1E90FF;
        }

        .btn-danger {
            background-color: #DC143C;
        }

            .btn-primary:hover,
            .btn-danger:hover {
                opacity: 0.8;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>Student List</h1>
    </div>

    <div class="container">
        <div>
            <nav class="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="../SubjectPage/SubjectPage">Subject</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../SemesterPage/SemesterPage">Semester</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../SessionPage/SessionPage">Session</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../RoomPage/RoomPage">Room</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../Student/StudentList">StudentList</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../MajorPage/MajorList">MajorList</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="content">
            <div class="table-container">
                <p>
                    <a asp-page="CreateStudent" class="btn btn-primary">Create New</a>
                </p>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Image</th>
                            <th>Status</th>
                            <th>Password</th>
                            <th>Major</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Student)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <img src="@item.Image" alt="Student Image" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Major.MajorCode)
                                </td>
                                <td>
                                    <a asp-page="./EditStudent" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                    <a asp-page="./DetailsStudent" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                    <a asp-page="./DeleteStudent" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>