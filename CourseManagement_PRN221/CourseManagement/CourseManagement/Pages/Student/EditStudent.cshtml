@page
@model CourseManagement.Pages.Student.EditModel

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Image" class="control-label"></label>
                <input asp-for="Student.Image" class="form-control" />
                <span asp-validation-for="Student.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Status" class="control-label"></label>
                <input asp-for="Student.Status" class="form-control" />
                <span asp-validation-for="Student.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.MajorId" class="control-label"></label>
                <select asp-for="Student.MajorId" class="form-control" asp-items="ViewBag.MajorId"></select>
                <span asp-validation-for="Student.MajorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Password" class="control-label"></label>
                <input asp-for="Student.Password" class="form-control" />
                <span asp-validation-for="Student.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./StudentList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
